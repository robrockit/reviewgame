# Sentry Configuration
# Get your DSN from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_organization_name
SENTRY_PROJECT=your_project_name

# Optional: Required for uploading source maps in CI/CD
# Get this from https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=your_auth_token_here

# Supabase Configuration
# Add your Supabase URL and keys here
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Application URL
# Used for QR code generation and OAuth callbacks
NEXT_PUBLIC_APP_URL=http://localhost:3000
